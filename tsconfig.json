{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "strict": false,
        "esModuleInterop": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "sourceMap": true,
        "noImplicitAny": false,
    },
    "include": [
        "@/**/*.ts",
        "./scripts/**/*.ts",
        "./deploy/**/*.ts",
        "./test/**/*.ts",
        "./typechain-types/**/*.ts",
        "./client/src/**/*.ts",
        "./client/src/**/*.vue",
        "client/test/*.ts",
    ],
    "files": [
        "./hardhat.config.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}